<div class="mailgun-list-manager manager">

  <h1>Listes de diffusion mail</h1>

  <div class="add-list no-print">
    <%= form_for :list, url: lists_path, remote: true do |f| %>
      <%= f.label :address %>
      <%= f.email_field :address, required: true %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :description %>
      <%= f.text_field :description %>
      <%= f.label :access_level %>
      <%= f.select(:access_level, MailgunListManager::List::ACCESS_LEVELS) %>
      <%= f.submit %>
    <% end %>
  </div>

  <div id="lists-wrapper">
    <%= render "lists" %>
  </div>

  <div id="overlay" data-loading>
  	<p>Loading<br><br><%= image_tag "mailgun_list_manager/loader.svg" %></p>
  </div>

</div>
